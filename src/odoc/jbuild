(jbuild_version 1)

(library
 ((name odoc)
  (libraries
   (doc_html loader unix fpath bos compiler-libs.common tyxml xref))))

(rule
 ((targets (css_file.ml))
  (deps (etc/odoc.css))
  (action
   (with-stdout-to ${@}
    (progn
     (echo "let content = {css|")
     (cat ${<})
     (echo "|css}"))))))
